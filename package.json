{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "start": "cross-env NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 6006",
    "build": "rimraf .storybook/dist && cross-env NODE_OPTIONS=--openssl-legacy-provider build-storybook -o .storybook/dist",
    "test": "jest",
    "dist": "lerna run dist",
    "lint": "tsc -p tsconfig.json --noEmit && eslint . --ext .jsx,.js,.ts,.tsx && stylelint **/*.scss && prettier --check . --loglevel warn",
    "lint:fix": "tsc -p tsconfig.json --noEmit && eslint . --ext .jsx,.js,.ts,.tsx --fix && stylelint **/*.scss --fix && prettier --write . --loglevel warn",
    "gh-pages": "yarn build && gh-pages -d .storybook/dist",
    "release": "yarn lint && yarn test && yarn dist && cross-env HUSKY=0 lerna publish --conventional-graduate",
    "release:alpha": "yarn lint && yarn test && yarn dist && cross-env HUSKY=0 lerna publish --conventional-prerelease --pre-dist-tag alpha",
    "release:beta": "yarn lint && yarn test && yarn dist && cross-env HUSKY=0 lerna publish --conventional-prerelease --pre-dist-tag beta",
    "clean": "lerna clean --yes && rimraf **/dist && rimraf **/*.log && rimraf .husky/_ && rimraf node_modules && git config --unset core.hooksPath"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.17.12",
    "@babel/plugin-proposal-class-static-block": "^7.18.0",
    "@babel/plugin-proposal-decorators": "^7.18.2",
    "@babel/plugin-proposal-export-default-from": "^7.17.12",
    "@babel/plugin-proposal-export-namespace-from": "^7.17.12",
    "@babel/plugin-proposal-private-methods": "^7.17.12",
    "@babel/plugin-proposal-private-property-in-object": "^7.17.12",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/runtime-corejs3": "^7.16.7",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@storybook/addon-actions": "^6.5.6",
    "@storybook/addon-essentials": "^6.5.6",
    "@storybook/addon-links": "^6.5.6",
    "@storybook/react": "^6.5.6",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.3",
    "babel-plugin-import": "^1.13.3",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "concurrently": "^7.2.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "cssnano": "^5.0.15",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "fs-extra": "^10.0.0",
    "gh-pages": "^4.0.0",
    "glob": "^7.2.0",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.5",
    "postcss": "^8.4.5",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-load-config": "^3.1.1",
    "postcss-loader": "^4.2.0",
    "postcss-preset-env": "^7.2.3",
    "prettier": "^2.5.1",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.63.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.47.0",
    "sass-loader": "^10.1.1",
    "storybook-dark-mode": "^1.1.0",
    "style-loader": "^2.0.0",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard-scss": "^3.0.0",
    "ts-jest": "^27.1.3",
    "tsc-files": "^1.1.3",
    "typescript": "^4.5.4"
  }
}
